<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/itemsHeading"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <Button
                android:id="@+id/cancelMultiSelect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/cancel30px"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/itemCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/mediumEmphasized"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multiselect"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/deleteMultipleItemsButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/delete30px"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemsHeading">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/disabled"
                android:orientation="horizontal"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:scrollbarAlwaysDrawVerticalTrack="true"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>