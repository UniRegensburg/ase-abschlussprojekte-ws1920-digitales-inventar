<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_anchorGravity="center"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <LinearLayout
        android:id="@+id/addImage"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxWidth="175dp"
            android:adjustViewBounds="true"
            android:layout_marginEnd="5sp"
            android:layout_marginBottom="6sp"
            android:src="@drawable/imgholder"/>

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:srcCompat="@android:drawable/ic_menu_camera"/>

        <ImageButton
        android:id="@+id/pickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="bottom"
        app:srcCompat="@android:drawable/ic_menu_gallery"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addName"
        android:layout_below="@+id/addImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_title"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addCategory"
        android:layout_below="@+id/addName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2  "/>

        <Button
            android:id="@+id/addCatButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/editIcon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addLocation"
        android:layout_below="@+id/addCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_location"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemLocation"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addBuyDate"
        android:layout_below="@+id/addLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBuyDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_buy_date"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemBuyDate"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/addBuyDateButton"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/plusIcon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addValue"
        android:layout_below="@+id/addBuyDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_value"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemValue"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addBorrowState"
        android:layout_below="@+id/addValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_borrow"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinnerBorrowState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addBorrowPerson"
        android:layout_below="@+id/addBorrowState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBorrowPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_borrow_person"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemBorrowPerson"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/addBorrowDate"
        android:layout_below="@+id/addBorrowPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBorrowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_borrow_date"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemBorrowDate"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/addBorrowDateButton"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/plusIcon"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/addBorrowDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addItemSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add"/>
        <Button
            android:id="@+id/addItemCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"/>
    </LinearLayout>
</RelativeLayout>